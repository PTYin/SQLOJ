{
  "env": {
    "node": true,
    "browser": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["react", "react-hooks"],
  "rules": {
    "linebreak-style": [2, "unix"],
    "quotes": [2, "single", "avoid-escape"],
    "semi": [2, "always"],
    "max-len": [2, { "code": 120 }]
  }
}